<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NavigationStyle" >
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11sp</item>
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorControlHighlight">?colorPrimary</item>
    </style>

    <style name="EditTextSearch" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?textAppearanceHeadline5</item>

    </style>

    <style name="AuthEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?textAppearanceHeadline5</item>
        <item name="android:backgroundTint">@color/yellow</item>

    </style>

</resources>