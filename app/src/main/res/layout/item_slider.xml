<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <com.example.moviestreaming.customview.imageview.MovieImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/iv_slider"/>

    <TextView
        android:id="@+id/tvMoviePublishedSlider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:textAppearance="?textAppearanceBody2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Nov 16 , 2021" />

    <TextView
        android:id="@+id/tvTimeMovieSlider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceBody2"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/tvMoviePublishedSlider"
        app:layout_constraintEnd_toEndOf="@+id/tvMoviePublishedSlider"
        app:layout_constraintStart_toStartOf="@+id/tvMoviePublishedSlider"
        tools:text="2h 32min" />

    <TextView
        android:id="@+id/tvNameSlider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceBody2"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/tvTimeMovieSlider"
        app:layout_constraintEnd_toEndOf="@+id/tvMoviePublishedSlider"
        app:layout_constraintStart_toStartOf="@+id/tvMoviePublishedSlider"
        tools:text="Harry Potter" />



</androidx.constraintlayout.widget.ConstraintLayout>